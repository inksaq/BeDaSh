<?xml version="1.0" encoding="utf-8"?>
<!-- Macronutrients Section Layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toggle Button -->
        <TextView
            android:id="@+id/macro_toggle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â–¶ Macronutrients (tap to add detailed nutrition)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="8dp" />

        <!-- Expandable Content -->
        <LinearLayout
            android:id="@+id/macronutrient_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All values in grams per serving (optional)"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginBottom="16dp" />

            <!-- Protein and Total Carbs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Protein (g)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/protein_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Carbs (g)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/total_carbs_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fiber and Sugars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fiber (g)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/fiber_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sugars (g)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/sugars_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Total Fat and Saturated Fat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Fat (g)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/total_fat_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saturated Fat (g)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/saturated_fat_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Trans Fat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trans Fat (g)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/trans_fat_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Empty space for balance -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
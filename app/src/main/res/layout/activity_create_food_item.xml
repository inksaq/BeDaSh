<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B8E6C0"
    tools:context=".CreateFoodItemActivity">

    <!-- Include Navigation Bar -->
    <include
        android:id="@+id/navbar"
        layout="@layout/layout_navbar" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Back button -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@null"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create food"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center" />
        </LinearLayout>

        <!-- Form Container -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Name of food -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name of food"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:inputType="textCapWords"
                    android:hint="Enter food name"
                    android:layout_marginBottom="16dp" />

                <!-- Category -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Start serving -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start serving"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/serving_size_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:inputType="text"
                    android:hint="e.g., 100g, 1 cup, 1 piece"
                    android:layout_marginBottom="16dp" />

                <!-- Cals per serving -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cals per serving"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/calories_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:inputType="numberDecimal"
                    android:hint="Enter calories per serving"
                    android:layout_marginBottom="24dp" />

            </LinearLayout>
        </ScrollView>

        <!-- Create Food Button -->
        <Button
            android:id="@+id/create_food_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create food item"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:padding="12dp" />
    </LinearLayout>
</LinearLayout>
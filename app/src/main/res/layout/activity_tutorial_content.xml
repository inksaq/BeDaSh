<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:orientation="vertical"
    tools:context=".TutorialContentActivity">

    <!-- Include Navigation Bar -->
    <include
        android:id="@+id/navbar"
        layout="@layout/layout_navbar" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#333333"
            android:contentDescription="Back" />

        <!-- Tutorial Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tutorial_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tutorial Title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tutorial_level_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BEGINNER"
                        android:textColor="#4CAF50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="#E8F5E8"
                        android:padding="4dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tutorial_duration_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 min"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:drawableStart="@android:drawable/ic_menu_recent_history"
                        android:drawablePadding="4dp" />

                </LinearLayout>

                <!-- Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/step_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Step 1 of 5"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginEnd="12dp" />

                    <ProgressBar
                        android:id="@+id/tutorial_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:progress="20"
                        android:progressTint="#4CAF50"
                        android:max="100" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tutorial Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:id="@+id/step_content_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tutorial content will be displayed here..."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="6dp"
                    android:fontFamily="sans-serif" />

            </ScrollView>
        </androidx.cardview.widget.CardView>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/previous_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â† Previous"
                android:textColor="#4CAF50"
                android:backgroundTint="@android:color/transparent"
                android:strokeColor="#4CAF50"
                android:strokeWidth="1"
                android:layout_marginEnd="8dp"
                android:visibility="invisible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next â†’"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:layout_marginStart="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/complete_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽ‰ Complete"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF9800"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
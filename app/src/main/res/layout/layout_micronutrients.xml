<?xml version="1.0" encoding="utf-8"?>
<!-- Micronutrients Section Layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toggle Button -->
        <TextView
            android:id="@+id/micro_toggle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â–¶ Micronutrients (tap to add vitamins &amp; minerals)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34A853"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Expandable Content -->
        <LinearLayout
            android:id="@+id/micronutrient_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Essential vitamins and minerals per serving (optional)"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginBottom="16dp" />

            <!-- Critical Micronutrients Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Critical Micronutrients"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Iron and Vitamin D -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Iron (mg)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/iron_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vitamin D (mcg)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/vitamin_d_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Vitamin B12 and Folate -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vitamin B12 (mcg)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/vitamin_b12_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Folate (mcg)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/folate_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Magnesium -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Magnesium (mg)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/magnesium_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Empty space for balance -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Important Micronutrients Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Important Micronutrients"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Calcium and Zinc -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calcium (mg)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/calcium_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Zinc (mg)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/zinc_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Potassium and Sodium -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Potassium (mg)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/potassium_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sodium (mg)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/sodium_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Vitamin C -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vitamin C (mg)"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/vitamin_c_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:inputType="numberDecimal"
                        android:hint="0.0"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Empty space for balance -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
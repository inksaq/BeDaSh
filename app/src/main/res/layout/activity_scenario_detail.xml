<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5"
    android:orientation="vertical"
    tools:context=".ScenarioDetailActivity">

    <!-- Include Navigation Bar -->
    <include
        android:id="@+id/navbar"
        layout="@layout/layout_navbar" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@null"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="#333333"
                android:contentDescription="Back" />

            <!-- Scenario Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/scenario_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scenario Title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#7B1FA2"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/scenario_level_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INTERMEDIATE"
                            android:textColor="#FF9800"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="#FFF3E0"
                            android:padding="6dp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/scenario_duration_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â± 15-20 min"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/scenario_description_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scenario description will appear here"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Scenario Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Client Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/scenario_details_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detailed scenario information will be loaded here..."
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="4dp"
                        android:fontFamily="monospace" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Challenge Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Your Challenge"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E65100"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/challenge_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Challenge details will be loaded here..."
                        android:textSize="14sp"
                        android:textColor="#BF360C"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/start_scenario_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš€ Start Practice Scenario"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#9C27B0"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tip: Take your time to think through each step. There's no single correct answer - focus on your reasoning process."
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>